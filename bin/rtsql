#!/bin/bash

bin=`dirname $0`
bin=`cd "${bin}" && pwd`

projectroot=`cd "${bin}/.." && pwd`

LIB_DIR="${projectroot}/lib"
MVN_TARGET_DIR="${projectroot}/target"
MVN_BUILD_DEPS_DIR="${MVN_TARGET_DIR}/dependency"

# CDH installation default
FLUME_HOME=${FLUME_HOME:-/usr/lib/flume}

function usage() {
  echo "Usage: rtsql <command> [args...]"
  echo "Commands include:"
  echo "  shell     Start the rtsql shell"
  echo "  server    Start a server to run background queries"
  echo "  version   Print rtsql version information and exit"
}

# Format: rtsql <command> [args...]
action="$1"
shift
if [ -z "$action" ]; then
  usage
  exit 0
elif [ "$action" == "shell" ]; then
  RTENGINE_MAIN_CLASS=com.odiago.rtengine.client.CmdLineClient
elif [ "$action" == "server" ]; then
  RTENGINE_MAIN_CLASS=com.odiago.rtengine.server.ServerMain
elif [ "$action" == "version" ]; then
  RTENGINE_MAIN_CLASS=com.odiago.rtengine.util.VersionInfo
else
  echo "Invalid command: $action"
  usage
  exit 1
fi


RTENGINE_CLASSPATH="${RTENGINE_CLASSPATH:-}"
RTENGINE_OPTS="${RTENGINE_OPTS:-}"
RTENGINE_CONF_DIR=${RTENGINE_CONF_DIR:-"${projectroot}/etc"}

function add_to_classpath() {
  dir=$1
  if [ ! -d "${dir}" ]; then
    return 0
  fi
  for jar in `ls "${dir}"`; do
    if [ -z "$RTENGINE_CLASSPATH" ]; then
      RTENGINE_CLASSPATH="${dir}/${jar}"
    else
      RTENGINE_CLASSPATH="${RTENGINE_CLASSPATH}:${dir}/${jar}"
    fi
  done
}

# If no lib dir exists and no dependency dir exists, then
# try to use mvn to retrieve dependencies.
if [ \( ! -d "${LIB_DIR}" \) -a \( ! -d "${MVN_BUILD_DEPS_DIR}" \) ]; then
  which mvn 2>&1 >/dev/null
  ret=$?
  if [ "${ret}" == 0 ]; then
    pushd "${projectroot}"
    echo "Retrieving dependencies via mvn"
    mvn dependency:copy-dependencies
    popd
  else
    echo "WARNING: Couldn't find any dependencies. mvn doesn't seem to be"
    echo "installed, so I don't know how to get them, either. This will"
    echo "probably explode."
  fi
fi

add_to_classpath "${MVN_BUILD_DEPS_DIR}"
add_to_classpath "${LIB_DIR}"

# Put Flume (and via this, Hadoop) directly on the classpath; we don't redistribute
# Flume with rtsql; it's marked as a 'provided' dependency.
if [ ! -z "${FLUME_HOME}" -a -d "${FLUME_HOME}/lib" ]; then
  add_to_classpath "${FLUME_HOME}/lib"
else
  echo "Warning: Couldn't find Flume installation. Make sure $$FLUME_HOME is set."
  exit 1
fi

# Is there a mvn target directory jar file? If we're running this from
# a development tree, put this ahead of any rtengine jar in lib/.
if [ -f "${MVN_TARGET_DIR}/rtengine.jar" ]; then
  RTENGINE_CLASSPATH="${MVN_TARGET_DIR}/rtengine.jar:${RTENGINE_CLASSPATH}"
fi
if [ -d "${MVN_TARGET_DIR}/classes" ]; then
  # If there's a target/classes/ dir, then we want to put this ahead of any
  # jar on the classpath; use the most recently compiled bits.
  RTENGINE_CLASSPATH="${MVN_TARGET_DIR}/classes:$RTENGINE_CLASSPATH"
fi

exec java -cp "${RTENGINE_CLASSPATH}" \
    -Drtengine.conf.dir="${RTENGINE_CONF_DIR}" \
    $RTENGINE_OPTS \
    "${RTENGINE_MAIN_CLASS}" "$@"

